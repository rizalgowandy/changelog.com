<div id="<%= @modal_id %>" class="ui small decline modal">
  <i class="close icon"></i>
  <div class="header">
    Decline with message: <em><%= @request.guests %></em>
  </div>
  <div class="content">
    <%= form_tag ~p"/admin/podcasts/#{@podcast.slug}/episode_requests/#{@request}/decline", id: @form_id, method: "PUT", class: "ui small form" do %>
      <div class="field">
        <div class="ui">
          <textarea name="message" placeholder="Reason for declining, sent by email to submitter"></textarea>
        </div>
      </div>
    <% end %>
  </div>
  <div class="actions">
    <input type="submit" form="<%= @form_id %>" name="decline" class="ui primary basic button" value="Decline">
    <div class="ui basic cancel button">Cancel</div>
  </div>
</div>
